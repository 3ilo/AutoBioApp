# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/autobio

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Frontend gate
REGISTRATION_SECRET=REGISTRATION_SECRET

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_SOCIAL_FEATURES=true 

# AWS
AWS_STAGING_BUCKET=AWS_STAGING_BUCKET
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY
AWS_REGION=AWS_REGION
S3_CLIENT_REGION=S3_CLIENT_REGION
BEDROCK_SUMMARY_MODEL_ID=BEDROCK_SUMMARY_MODEL_ID
# Legacy Bedrock Configuration (for fallback)
BEDROCK_CLIENT_REGION=BEDROCK_CLIENT_REGION
BEDROCK_IMAGE_MODEL_ID=BEDROCK_IMAGE_MODEL_ID

# Illustration Service
ILLUSTRATION_SERVICE_URL=ILLUSTRATION_SERVICE_URL
ILLUSTRATION_SERVICE_AUTH_TOKEN=ILLUSTRATION_SERVICE_AUTH_TOKEN

# Dev modes
CURRENT_IP_ADDRESS=CURRENT_IP_ADDRESS
USE_BEDROCK_FALLBACK=false
USE_ILLUSTRATION_SERVICE=true
USE_ILLUSTRATION_STUB=true